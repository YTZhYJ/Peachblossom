<?xml version='1.0' encoding='UTF-8'?>
<!DOCTYPE hibernate-configuration PUBLIC
          "-//Hibernate/Hibernate Configuration DTD 3.0//EN"
          "http://www.hibernate.org/dtd/hibernate-configuration-3.0.dtd">
<!-- Generated by MyEclipse Hibernate Tools.                   -->
<hibernate-configuration>

<session-factory>
	<!-- 注入数据源-->
	<property name="hibernate.dialect">
		org.hibernate.dialect.MySQLDialect
	</property>
	<property name="hibernate.connection.url">jdbc:mysql://localhost:3306/peachblossom</property>
	<property name="hibernate.connection.username">root</property>
	<property name="hibernate.connection.password"></property>
	<property name="hibernate.connection.driver_class">
		com.mysql.jdbc.Driver
	</property>
	<property name="myeclipse.connection.profile">MySQL</property>

	<!-- 是否显示及格式化 SQL -->
	<property name="hibernate.show_sql">true</property>
	<property name="hibernate.format_sql">true</property>

	<!-- 生成数据表的策略 -->
	<property name="hibernate.hbm2ddl.auto">update</property>

	<!-- 二级缓存相关 -->

	<!-- 配置 hibernate 映射文件 	-->
	<mapping
		resource="com/pytd/db/entity/hibernatexml/AuthGroup.hbm.xml" />
	<mapping
		resource="com/pytd/db/entity/hibernatexmlAuthPermission.hbm.xml" />
	<mapping
		resource="com/pytd/db/entity/hibernatexml/AuthPermission2Group.hbm.xml" />
	<mapping
		resource="com/pytd/db/entity/hibernatexml/AuthUser.hbm.xml" />
	<mapping
		resource="com/pytd/db/entity/hibernatexml/AuthUser2Group.hbm.xml" />
	<mapping resource="com/pytd/db/entity/hibernatexml/Message.hbm.xml" />
	<mapping
		resource="com/pytd/db/entity/hibernatexml/DictGender.hbm.xml" />
	<mapping
		resource="com/pytd/db/entity/hibernatexml/ModuleMenu.hbm.xml" />

</session-factory>

</hibernate-configuration>